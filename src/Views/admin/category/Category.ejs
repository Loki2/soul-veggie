
<!DOCTYPE html>
<html>
  <%- include('../../partials/Header')%>
<body>
	
  <%- include('../../partials/Navbar')%>
  <%- include('../../partials/Sidebar')%>

	<div class="mobile-menu-overlay"></div>
	<div class="main-container">
		<div class="pd-ltr-20">
			<div class="pd-10 card-box mb-10">
				<div class="clearfix">
					<div class="pull-left">
						<h4 class="text-blue h4">ຂໍ້ມູນປະເພດ</h4>
					</div>
					<div class="pull-right">
						<a href="/category/add" class="btn btn-outline-primary btn-sm scroll-click">ເພີ່ມຂໍ້ມູນປະເພດ</a>
					</div>
				</div>
			</div>
		
			<div class="pd-5 card-box mb-30">
				<table class="data-table table nowrap">
					<thead>
						<tr>
							<th class="table-plus datatable-nosort">Image</th>
							<th>Title</th>
							<th>Description</th>
							<th>Status</th>
							<th class="datatable-nosort">Action</th>
						</tr>
					</thead>
					<tbody>
						<% categories.forEach(function(category) { %>
							<tr>
								<td class="table-plus">
									<% if(category.image == "") { %>
											<img src="/images/noimage.png" width="70px" height="70px" alt="">
										<% } else { %>
											<img src="/frontend/images/category/<%= category._id %>/<%= category.image %>" width="70px" height="70px" alt="">
									<% }%>									
								</td>
								<td>
									<h5 class="font-16"><%= category.title %></h5>
									<%= category.subtitle %>
								</td>
								<td><%= category.desc %></td>
								<td><%= category.status %></td>
								<td>
									<div class="dropdown">
										<a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
											<i class="dw dw-more"></i>
										</a>
										<div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
											<!-- <a class="dropdown-item" href="#"><i class="dw dw-eye"></i> View</a> -->
											<a class="dropdown-item" href="/category/edit/<%= category.id %>"><i class="dw dw-edit2"></i> Edit</a>
											<a class="dropdown-item" href="#"><i class="dw dw-delete-3"></i> Delete</a>
										</div>
									</div>
								</td>
							</tr>
						<% }) %>
					</tbody>
				</table>
			</div>
      <%- include('../../partials/Footer')%>
		</div>
	</div>
	<%- include('../../partials/Script') %>
</body>
</html>

<!DOCTYPE html>
<html>
  <%- include('../../partials/Header')%>
<body>
	
  <%- include('../../partials/Navbar')%>
  <%- include('../../partials/Sidebar')%>

	<div class="mobile-menu-overlay"></div>
	<div class="main-container">
		<div class="pd-ltr-20">
			<div class="pd-10 card-box mb-10">
				<div class="clearfix">
					<div class="pull-left">
						<h4 class="text-blue h4">ພະນັກງານ/Staff</h4>
					</div>
					<div class="pull-right">
						<!-- <a href="/supplier/add" class="btn btn-outline-primary btn-sm scroll-click">ເພີ່ມໃຫມ່</a> -->
					</div>
				</div>
			</div>
      <% if(typeof employees !== 'undefined'){ %>
        <div class="pd-5 card-box mb-30">
					<table class="data-table table nowrap">
						<thead>
							<tr>
								<th class="table-plus datatable-nosort">Profile</th>
								<th>Username</th>
								<th>First Name</th>
								<th>Address</th>
								<th>City</th>
								<th>Province</th>
								<th>Contact</th>
								<th>Phone</th>
								<th>Created</th>
								<th class="datatable-nosort">Action</th>
							</tr>
						</thead>
						<tbody>
              <% employees.forEach(function(employee) { %>
                <tr>
									<td class="table-plus">
										<% if(employee.profile == "") { %>
											<img src="/images/noimage.png" width="48pxpx" height="48px" alt="">
											<% } else { %>
											<img src="/frontend/images/users/profile/<%= employee._id %>/<%= employee.profile %>" width="48px" height="48pxpx" alt="">
										<% }%>
									</td>
									<td>
										<h5 class="font-16"><%= employee.user.username %></h5>
									</td>
									<td><%= employee.firstname %></td>
									<td><%= employee.address %></td>
									<td><%= employee.city %></td>
									<td><%= employee.province %></td>
									<td><%= employee.contact %></td>
									<td><%= employee.phone %></td>
                  <td><%= employee.createdAt.toLocaleString() %></td>
									<td>
										<div class="dropdown">
											<a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
												<i class="dw dw-more"></i>
											</a>
											<div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
												<a class="dropdown-item" href="#"><i class="dw dw-eye"></i> View</a>
												<a class="dropdown-item" href="#"><i class="dw dw-edit2"></i> Edit</a>
												<a class="dropdown-item" href="#"><i class="dw dw-delete-3"></i> Delete</a>
											</div>
										</div>
									</td>
								</tr>
              <% });%>
						</tbody>
					</table>
				</div>
        <% }else { %>
          <div class="pd-5 card-box mb-30">
            <table class="data-table table nowrap">
              <thead>
                <tr>
                  <th class="table-plus datatable-nosort">Profile</th>
                  <th>Username</th>
                  <th>First Name</th>
                  <th>Address</th>
                  <th>City</th>
                  <th>Province</th>
                  <th>Contact</th>
                  <th>Phone</th>
                  <th>Status</th>
                  <th class="datatable-nosort">Action</th>
                </tr>
              </thead>
              <tbody>
                  <tr>
                    <td class="table-plus">
                      <img src="" width="70" height="70" alt="">
                    </td>
                    <td>
                      <h5 class="font-16"></h5>
                    </td>
                    <td>Empty...</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                      <div class="dropdown">
                        <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                          <i class="dw dw-more"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                          <a class="dropdown-item" href="#"><i class="dw dw-eye"></i> View</a>
                          <a class="dropdown-item" href="#"><i class="dw dw-edit2"></i> Edit</a>
                          <a class="dropdown-item" href="#"><i class="dw dw-delete-3"></i> Delete</a>
                        </div>
                      </div>
                    </td>
                  </tr>
              </tbody>
            </table>
          </div>
      <% } %>
      <%- include('../../partials/Footer')%>
		</div>
	</div>
	<%- include('../../partials/Script') %>
</body>
</html>
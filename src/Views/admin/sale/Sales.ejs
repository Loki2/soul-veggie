
<!DOCTYPE html>
<html>
  <%- include('../../partials/Header')%>
<body>
	
  <%- include('../../partials/Navbar')%>
  <%- include('../../partials/Sidebar')%>

	<div class="mobile-menu-overlay"></div>
	<div class="main-container">
		<div class="pd-ltr-20">
			<div class="pd-10 card-box mb-10">
				<div class="clearfix">
					<div class="pull-left">
						<h4 class="text-blue h4">ຂໍ້ມູນການຂາຍ/Sales List</h4>
					</div>
					<div class="pull-right">
						<!-- <a href="/supplier/add" class="btn btn-outline-primary btn-sm scroll-click">ເພີ່ມໃຫມ່</a> -->
					</div>
				</div>
			</div>
      <% if(typeof sales !== 'undefined') { %>
        <div class="pd-5 card-box mb-30">
					<table class="data-table table nowrap">
						<thead>
							<tr>
                <th>Create Date</th>
								<th>Items</th>
								<th>Quantity</th>
								<th>Amount</th>
								<th>Paid Status</th>
								<th>Seller Name</th>
								<th class="datatable-nosort">Action</th>
							</tr>
						</thead>
						<tbody>
                <% sales.forEach(function(sale){ %>
                <tr>
                  <td><%= sale.createdAt.toLocaleDateString() %></td>
									<td>
                    <% sale.items.forEach(function(item){ %>
										<h6><%= item.vegetable.name %> <span> - Price: <%= item.price %> Kip</span></h6><span>Anount: <%= item.qty %></span>
                    <% }); %>
									<td><%= sale.qty %></td>
									<td><%= sale.amount %> Kip</td>
									<td><%= sale.isPaid %></td>
									<td><%= sale.user.username %></td>
									<td>
										<div class="dropdown">
											<a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
												<i class="dw dw-more"></i>
											</a>
											<div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
												<a class="dropdown-item" href="/admin/sales/invoice/<%= sale.id %>"><i class="dw dw-eye"></i> View Invoice</a>
                        <a class="dropdown-item" href="/admin/sales/invoice-mobile/<%= sale.id %>"><i class="dw dw-eye"></i> Mobile Mode</a>
											</div>
										</div>
									</td>
								</tr>
                <% }); %>
						</tbody>
					</table>
				</div>
        <% }else { %>
          <div class="pd-5 card-box mb-30">
            <table class="data-table table nowrap">
              <thead>
                <tr>
                  <th>Items</th>
                  <th>Quantity</th>
                  <th>Amount</th>
                  <th>Paid Status</th>
                  <th>Seller Name</th>
                  <th class="datatable-nosort">Action</th>
                </tr>
              </thead>
              <tbody>
                  <tr>
                    <td>
                      <h5 class="font-16"></h5>
                    </td>
                    <td>Empty ...</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                      <div class="dropdown">
                        <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                          <i class="dw dw-more"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                          <a class="dropdown-item" href="#"><i class="dw dw-eye"></i> View</a>
                          <a class="dropdown-item" href="#"><i class="dw dw-edit2"></i> Edit</a>
                          <a class="dropdown-item" href="#"><i class="dw dw-delete-3"></i> Delete</a>
                        </div>
                      </div>
                    </td>
                  </tr>
              </tbody>
            </table>
          </div>
      <% } %>
      <%- include('../../partials/Footer')%>
		</div>
	</div>
	<%- include('../../partials/Script') %>
</body>
</html>
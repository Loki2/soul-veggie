
<!DOCTYPE html>
<html>
  <%- include('../../partials/Header')%>
<body>
	
  <%- include('../../partials/Navbar')%>
  <%- include('../../partials/Sidebar')%>

	<div class="mobile-menu-overlay"></div>
	<div class="main-container">
		<div class="pd-ltr-20">
			<div class="pd-10 card-box mb-10">
				<div class="clearfix">
					<div class="pull-left">
						<h4 class="text-blue h4">ຜູ້ສະຫນອງ/Supplier</h4>
					</div>
					<div class="pull-right">
						<a href="/supplier/add" class="btn btn-outline-primary btn-sm scroll-click">ເພີ່ມໃຫມ່</a>
					</div>
				</div>
			</div>
			<% if(typeof suppliers !== 'undefined') { %>
				<div class="pd-5 card-box mb-30">
					<table class="data-table table nowrap">
						<thead>
							<tr>
								<th class="table-plus datatable-nosort">Logo</th>
								<th>Org Name</th>
								<th>User Name</th>
								<th>Address</th>
								<th>City</th>
								<th>Province</th>
								<th>Contact</th>
								<th>Phone</th>
								<th>Status</th>
								<th class="datatable-nosort">Action</th>
							</tr>
						</thead>
						<tbody>
							<% suppliers.forEach(function(supplier) { %>
								<tr>
									<td class="table-plus">
										<% if(supplier.logo == "") { %>
											<img src="/images/noimage.png" width="70px" height="70px" alt="">
										<% } else { %>
											<img src="/frontend/images/supplier/<%= supplier._id %>/<%= supplier.logo %>" width="70px" height="70px" alt="">
										<% }%>
									</td>
									<td>
										<h5 class="font-16"><%= supplier.orgname %></h5>
									</td>
									<td><%= supplier.firstname %></td>
									<td><%= supplier.address %></td>
									<td><%= supplier.city %></td>
									<td><%= supplier.province %></td>
									<td><%= supplier.contact %></td>
									<td><%= supplier.phone %></td>
									<td><%= supplier.status %></td>
									<td>
										<div class="dropdown">
											<a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
												<i class="dw dw-more"></i>
											</a>
											<div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
												<a class="dropdown-item" href="/supplier/view/<%= supplier.id %>"><i class="dw dw-eye"></i> View</a>
												<a class="dropdown-item" href="/supplier/edit/<%= supplier.id %>"><i class="dw dw-edit2"></i> Edit</a>
												<a class="dropdown-item" href="#"><i class="dw dw-delete-3"></i> Delete</a>
											</div>
										</div>
									</td>
								</tr>
							<% }) %>
						</tbody>
					</table>
				</div>
				<% } else { %>
					<div class="pd-5 card-box mb-30">
						<table class="data-table table nowrap">
							<thead>
								<tr>
									<th class="table-plus datatable-nosort">Logo</th>
									<th>Org Name</th>
									<th>User Name</th>
									<th>Address</th>
									<th>City</th>
									<th>Province</th>
									<th>Contact</th>
									<th>Phone</th>
									<th>Status</th>
									<th class="datatable-nosort">Action</th>
								</tr>
							</thead>
							<tbody>
									<tr>
										<td class="table-plus">
											<img src="" alt="">
										</td>
										<td>
											<h5 class="font-16"></h5>
										</td>
										<td>Empty</td>
										<td></td>
										<td></td>
										<td></td>
										<td></td>
										<td></td>
										<td></td>
										<td>
											<div class="dropdown">
												<a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
													<i class="dw dw-more"></i>
												</a>
												<div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
													<a class="dropdown-item" href="/category/view"><i class="dw dw-eye"></i> View</a>
													<a class="dropdown-item" href="/category/edit"><i class="dw dw-edit2"></i> Edit</a>
													<a class="dropdown-item" href="/category/delete"><i class="dw dw-delete-3"></i> Delete</a>
												</div>
											</div>
										</td>
									</tr>
							</tbody>
						</table>
					</div>
				<% } %>
      <%- include('../../partials/Footer')%>
		</div>
	</div>
	<%- include('../../partials/Script') %>
</body>
</html>
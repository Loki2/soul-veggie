
<!DOCTYPE html>
<html>
  <%- include('../../partials/Header')%>
<body>
	
  <%- include('../../partials/Navbar')%>
  <%- include('../../partials/Sidebar')%>

	<div class="main-container">
		<div class="pd-ltr-20">
			<div class="pd-10 card-box mb-10">
				<div class="clearfix">
					<div class="pull-left">
						<h4 class="text-blue h4">ຂໍ້ມູນຜັກ/Vegetables ຂອງ <%= firstname %></h4>
					</div>
					<div class="pull-right">
						<a href="/manage/members/vegetable/add/<%= memberId %>" class="btn btn-outline-primary btn-sm scroll-click">ເພີ່ມໃຫມ່</a>
					</div>
				</div>
			</div>
      <% if(typeof vegetables !== 'undefined') { %>
        <div class="pd-5 card-box mb-30">
          <table class="data-table table nowrap">
            <thead>
              <tr>
                <th class="table-plus datatable-nosort">Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Unit</th>
                <th>Amount</th>
                <th>Last Updated</th>
                <th class="datatable-nosort">Action</th>
              </tr>
            </thead>
            <tbody>
              <% vegetables.forEach(function(vegge){ %>
                <tr>
                  <td class="table-plus">
                    <% if(vegge.vegetable.image == "") { %>
                      <img src="/images/noimage.png" width="60px" height="60px" alt="">
                      <% } else { %>
                      <img src="/frontend/images/vegetable/<%= vegge.vegetable._id %>/<%= vegge.vegetable.image %>" width="60px" height="60px" alt="">
                    <% }%>
                  </td>
                  <td>
                    <h5 class="font-16"><%= vegge.vegetable.name %></h5>
                  </td>
                  <td><%= vegge.price %> kip</td>
                  <td><%= vegge.qty %></td>
                  <td><%= vegge.unit %></td>
                  <td><%= vegge.anount %> kip</td>
                  <td><%= vegge.updatedAt.toLocaleString() %></td>
                  <td>
                    <div class="dropdown">
                      <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                        <i class="dw dw-more"></i>
                      </a>
                      <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                        <a class="dropdown-item" href="/manage/members/vegetable/update/<%= vegge.id %>"><i class="dw dw-edit2"></i> Edit</a>
                        <a class="dropdown-item" href="#"><i class="dw dw-delete-3"></i> Delete</a>
                        <!-- <a class="dropdown-item" href="/manage/members/vegetable/delete/<%= vegge.id %>"><i class="dw dw-delete-3"></i> Delete</a> -->
                      </div>
                    </div>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <% }else{ %>
          <div class="pd-5 card-box mb-30">
            <table class="data-table table nowrap">
                  <thead>
                    <tr>
                      <th class="table-plus datatable-nosort">Image</th>
                      <th>Name</th>
                      <th>Price</th>
                      <th>Quantity</th>
                      <th>Unit</th>
                      <th>Amount</th>
                      <th>Last Updated</th>
                      <th class="datatable-nosort">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                      <tr>
                        <td class="table-plus">
                          <img src="" alt="image">
                        </td>
                        <td>
                          <h5 class="font-16">Empty ...</h5>
                        </td>
                        <td> kip</td>
                        <td></td>
                        <td></td>
                        <td> kip</td>
                        <td></td>
                        <td>
                        <div class="dropdown">
                            <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                <i class="dw dw-more"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                              <a class="dropdown-item" href="/manage/user/vegetable/update/"><i class="dw dw-edit2"></i> Edit</a>
                              <a class="dropdown-item" href="/manage/user/vegetable/delete/"><i class="dw dw-delete-3"></i> Delete</a>
                            </div>
                          </div>
                        </td>
                      </tr>
                    </tbody>
            </table>
          </div>
      <% } %>
      <%- include('../../partials/Footer')%>
		</div>
	</div>
	<%- include('../../partials/Script') %>
</body>
</html>
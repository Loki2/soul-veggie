
<!DOCTYPE html>
<html>
  <%- include('../../partials/Header')%>
<body>
	
  <%- include('../../partials/Navbar')%>
  <%- include('../../partials/Sidebar')%>

	<div class="mobile-menu-overlay"></div>
	<div class="main-container">
		<div class="pd-ltr-20">
			<div class="pd-10 card-box mb-10">
				<div class="clearfix">
					<div class="pull-left">
						<h4 class="text-blue h4">ຂໍ້ມູນຂ່າວສານ</h4>
					</div>
					<div class="pull-right">
						<a href="/manage/blogs/add" class="btn btn-outline-primary btn-sm scroll-click">ເພີ່ມຂໍ້ມູນ</a>
					</div>
				</div>
			</div>
      <% if(typeof blogs !== 'undefined'){ %>
			<div class="pd-5 card-box mb-30">
				<table class="data-table table nowrap">
					<thead>
						<tr>
							<th class="table-plus datatable-nosort">Image</th>
							<th>Title</th>
							<th>Create By</th>
              <th>Create At</th>
							<th>Status</th>
							<th class="datatable-nosort">Action</th>
						</tr>
					</thead>
					<tbody>
            <% blogs.forEach(function(blog){ %>
							<tr>
								<td class="table-plus">
                  <% if(blog.image == "") { %>
										<img src="/images/noimage.png" width="70px" height="70px" alt="">
									<% } else { %>
										<img src="/frontend/images/blogs/<%= blog._id %>/<%= blog.image %>" width="70px" height="70px" alt="">
									<% }%>
								</td>
								<td>
									<h5 class="font-16"><%= blog.title %></h5>
								</td>
                <td><%= blog.user.username %></td>
								<td><%= blog.createdAt.toLocaleDateString() %></td>
                <td><%= blog.status %></td>
								<td>
									<div class="dropdown">
										<a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
											<i class="dw dw-more"></i>
										</a>
										<div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
											<!-- <a class="dropdown-item" href="#"><i class="dw dw-eye"></i> View</a> -->
											<a class="dropdown-item" href="/manage/blogs/edit/<%= blog.id %>"><i class="dw dw-edit2"></i> Edit</a>
											<a class="dropdown-item" href="/manage/blogs/delete/<%= blog.id %>"><i class="dw dw-delete-3"></i> Delete</a>
										</div>
									</div>
								</td>
							</tr>
              <% }); %>
					</tbody>
				</table>
			</div>
      <% }else{ %>
        <div class="pd-5 card-box mb-30">
          <table class="data-table table nowrap">
            <thead>
              <tr>
                <th class="table-plus datatable-nosort">Image</th>
                <th>Title</th>
                <th>Sub</th>
                <th>Description</th>
                <th>Status</th>
                <th class="datatable-nosort">Action</th>
              </tr>
            </thead>
            <tbody>
                <tr>
                  <td class="table-plus">
                      <img src="/images/noimage.png" width="70px" height="70px" alt="">			
                  </td>
                  <td>
                    <h5 class="font-16">Empty...</h5>
                  </td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td>
                    <div class="dropdown">
                      <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                        <i class="dw dw-more"></i>
                      </a>
                      <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                        <!-- <a class="dropdown-item" href="#"><i class="dw dw-eye"></i> View</a> -->
                        <a class="dropdown-item" href="/manage/banners/edit/"><i class="dw dw-edit2"></i> Edit</a>
                        <a class="dropdown-item" href="/manage/banners/delete/"><i class="dw dw-delete-3"></i> Delete</a>
                      </div>
                    </div>
                  </td>
                </tr>
            </tbody>
          </table>
        </div>
      <% } %>
      <%- include('../../partials/Footer')%>
		</div>
	</div>
	<%- include('../../partials/Script') %>
</body>
</html>
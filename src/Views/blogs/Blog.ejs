<!DOCTYPE html>
<html class="no-js" lang="en">

<%- include('../layouts/Header')%>
<body class="biolife-body">

  <%- include('../layouts/Navigation')%>

    <!--Hero Section-->
    <div class="hero-section hero-background style-02">
        <h1 class="page-title">ຂໍ້ມູນຂ່າວສານ</h1>
        <nav class="biolife-nav">
            <ul>
                <li class="nav-item"><a href="/" class="permal-link">Home</a></li>
                <li class="nav-item"><span class="current-page">ຂໍ້ມູນຂ່າວສານ</span></li>
            </ul>
        </nav>
    </div>

    <!-- Page Contain -->
    <div class="page-contain blog-page left-sidebar">
        <div class="container">
            <div class="row">
                <!-- Main content -->
                
                <div id="main-content" class="main-content col-lg-9 col-md-8 col-sm-12 col-xs-12">
                    <% if(typeof blogs !== 'undefined'){ %>
                    <ul class="posts-list main-post-list">
                        <% blogs.forEach(function(blog){ %>
                        <li class="post-elem">
                            <div class="post-item style-wide">
                                <div class="thumbnail">
                                    <a href="/blogs/<%= blog.id %>" class="link-to-post">
                                        <% if(blog.image == "") { %>
                                            <img src="/images/noimage.png" width="70px" height="70px" alt="">
                                        <% } else { %>
                                            <img src="/frontend/images/blogs/<%= blog._id %>/<%= blog.image %>" width="570" height="335" alt="">
                                        <% }%>                                        
                                    </a>
                                </div>
                                <div class="post-content">
                                    <h4 class="post-name"><a href="/blogs/<%= blog.id %>" class="linktopost"><%= blog.title %></a></h4>
                                    <p class="post-archive"><b class="post-cat">Date:</b><span class="post-date"> <%= blog.createdAt.toLocaleString() %>, </span><span class="author">Posted By: <%= blog.user.profiles.firstname %></span></p>
                                    <p class="excerpt"><%= blog.subtitle %></p>
                                    <div class="group-buttons">
                                        <a href="/blogs/<%= blog.id %>" class="btn readmore">read more</a>
                                        <a href="#" class="btn count-number liked"><i class="biolife-icon icon-heart-1"></i><span class="number">20</span></a>
                                        <a href="#" class="btn count-number commented"><i class="biolife-icon icon-conversation"></i><span class="number">06</span></a>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <% }); %>
                    </ul>
                    <% }else{ %>
                        <ul class="posts-list main-post-list">
                            <li class="post-elem">
                                <div class="post-item style-wide">
                                    <div class="thumbnail">
                                        <a href="#" class="link-to-post">
                                            <img src="/images/noimage.png" width="870" height="635" alt="">
                                        </a>
                                    </div>
                                    <div class="post-content">
                                        <h4 class="post-name"><a href="#" class="linktopost">Empty...</a></h4>
                                        <p class="post-archive"><b class="post-cat">ORGANIC</b><span class="post-date"> / 20 Nov, 2018</span><span class="author">Posted By: Braum J.Teran</span></p>
                                        <p class="excerpt">The best Organic Food blogs from thousands of top Organic food blogs in our index using search and social metrics. We’ve carefully selected these websites because they are actively working to educate, inspire, and empower their readers with frequent updates and high-quality information.</p>
                                        <div class="group-buttons">
                                            <a href="#" class="btn readmore">read more</a>
                                            <a href="#" class="btn count-number liked"><i class="biolife-icon icon-heart-1"></i><span class="number">20</span></a>
                                            <a href="#" class="btn count-number commented"><i class="biolife-icon icon-conversation"></i><span class="number">06</span></a>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    <% } %>
                    <div class="biolife-panigations-block ">
                        <ul class="panigation-contain">
                            <li><span class="current-page">1</span></li>
                            <li><a href="#" class="link-page">2</a></li>
                            <li><a href="#" class="link-page">3</a></li>
                            <li><span class="sep">....</span></li>
                            <li><a href="#" class="link-page">20</a></li>
                            <li><a href="#" class="link-page next"><i class="fa fa-angle-right" aria-hidden="true"></i></a></li>
                        </ul>
                    </div>
                </div>

                <!-- Sidebar -->
                <aside id="sidebar" class="sidebar blog-sidebar col-lg-3 col-md-4 col-sm-12 col-xs-12">

                    <!--Sidebar head for mobile version-->
                    <div class="biolife-mobile-panels">
                        <span class="biolife-current-panel-title">Sidebar</span>
                        <a class="biolife-close-btn" href="#" data-object="open-mobile-filter">&times;</a>
                    </div>

                    <!--Sidebar Content-->
                    <div class="sidebar-contain">

                        <!--Search Widget-->
                        <div class="widget search-widget">
                            <div class="wgt-content">
                                <form action="#" name="frm-search" method="get" class="frm-search">
                                    <input type="text" name="s" value="" placeholder="SEACH..." class="input-text">
                                    <button type="submit" name="ok"><i class="biolife-icon icon-search"></i></button>
                                </form>
                            </div>
                        </div>

                        <!--Categories Widget-->
                        <div class="widget biolife-filter">
                            <h4 class="wgt-title">Categories</h4>
                            <div class="wgt-content">
                                <ul class="cat-list">
                                    <li class="cat-list-item"><a href="#" class="cat-link">Beauty (0)</a></li>
                                    <li class="cat-list-item"><a href="#" class="cat-link">Fashion (0)</a></li>
                                    <li class="cat-list-item"><a href="#" class="cat-link">Food (0)</a></li>
                                    <li class="cat-list-item"><a href="#" class="cat-link">Life Style (0)</a></li>
                                    <li class="cat-list-item"><a href="#" class="cat-link">Travel (0)</a></li>
                                </ul>
                            </div>
                        </div>

                        <!--Posts Widget-->
                        <div class="widget posts-widget">
                            <h4 class="wgt-title">Recent post</h4>
                            <div class="wgt-content">
                                <ul class="posts">
                                    <% blogs.forEach(function(blog){ %>
                                        <li>
                                            <div class="wgt-post-item">
                                                <div class="thumb">
                                                    <a href="/blogs/<%= blog.id %>">
                                                        <% if(blog.image == "") { %>
                                                            <img src="/images/noimage.png" width="80" height="58" alt="">
                                                        <% } else { %>
                                                            <img src="/frontend/images/blogs/<%= blog._id %>/<%= blog.image %>" width="80" height="58" alt="">
                                                        <% }%> 
                                                    </a>
                                                </div>
                                                <div class="detail">
                                                    <h4 class="post-name"><a href="/blogs/<%= blog.id %>"><%= blog.title %></a></h4>
                                                    <p class="post-archive"><%= blog.createdAt.toLocaleString() %>, <span class="comment">15 Comments</span></p>
                                                </div>
                                            </div>
                                        </li>
                                    <% }); %>
                                </ul>
                            </div>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </div>

    <%- include('../layouts/Footer')%>
</body>

</html>